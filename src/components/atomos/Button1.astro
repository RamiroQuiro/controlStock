---
const { onClick, id, style, type, className } = Astro.props as {
  onClick: () => void;
  id: string;
  style: string;
  type: 'submit' | 'reset' | 'button' | null | undefined;
  className: string;
};
---

<button
  id={id}
  onclick={onClick}
  type={type}
  class={`${className}  px-2 py-1 rounded-md font-  lowercase md:tracking-normal tracking-tighter active:ring-2 border-primary-100/20 hover:ring-2 hover:ring-primary-100/50 md:ring-0 ring-primary-100 duration-200 text-xs  border bg-white hover:bg-gray-50 hover:text-primary-textoTitle`}
>
  <slot />
</button>
