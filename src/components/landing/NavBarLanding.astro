---
import { Menu } from 'lucide-react';
import Button1 from '../atomos/Button1.astro';
---

<nav
  class="bg-white py-2 px-6 md:px-8 shadow-sm fixed w-full top-0 left-0 z-40"
>
  <div class="container mx-auto">
    <div class="flex justify-between items-center">
      <div class="flex items-center">
        <a href="/" class="flex items-center space-x-2">
          <span class="text-2xl font-bold text-primary-600"
            >Stock<span class="text-primary-500">Vista</span></span
          >
        </a>
      </div>

      {/* Desktop Navigation */}
      <div class="hidden md:flex items-center gap-6 font-semibold">
        <a href="/" class="text-primary-textoTitle hover:text-primary-600"
          >Inicio</a
        >
        <a
          href="/#features"
          class="text-primary-textoTitle hover:text-primary-600"
          >Características</a
        >
        <a
          href="/#benefits"
          class="text-primary-textoTitle hover:text-primary-600">Beneficios</a
        >
        <Button1
          asChild
          variant="ghost"
          class="border border-primary-600 text-primary-600 hover:bg-primary-600 hover:text-white"
        >
          <a href="/contact">Contacto</a>
        </Button1>
        <Button1
          asChild
          class="bg-primary-600 text-white hover:bg-primary-600/90"
        >
          <a href="/login">Iniciar sesión</a>
        </Button1>
      </div>

      {/* Mobile Menu Button */}
      <button class="md:hidden" id="toggleMenu">
        <Menu className="h-6 w-6 text-primary-textoTitle" />
      </button>
    </div>

    {/* Mobile Navigation */}

    <div class="md:hidden pt-4 pb-2 space-y-2 animate-fade-in">
      <a
        href="/"
        class="block py-2 text-primary-textoTitle hover:text-primary-600"
        >Inicio</a
      >
      <a
        href="/#features"
        class="block py-2 text-primary-textoTitle hover:text-primary-600"
        >Características</a
      >
      <a
        href="/#benefits"
        class="block py-2 text-primary-textoTitle hover:text-primary-600"
        >Beneficios</a
      >
      <div class="flex flex-col space-y-2 pt-2">
        <Button1>
          <a href="/contact">Contacto</a>
        </Button1>
        <Button1>
          <a href="/login">Iniciar sesión</a>
        </Button1>
      </div>
    </div>
  </div>
</nav>

<script>
  const toggleMenu = () => {
    const menu = document.getElementById('toggleMenu');
    const isMenuOpen = menu.getAttribute('data-menu-open') === 'true';
    menu.setAttribute('data-menu-open', !isMenuOpen);
  };
</script>
