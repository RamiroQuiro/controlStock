<div class="swiper mySwiper relative">
  <div class="swiper-wrapper gap-3">
    <div class="swiper-slide">
      <img
        src="/screenDashboard.png"
        alt="Sistema de punto de venta"
        class="rounded-lg w-full object-fill h-full"
      />
    </div>
    <div class="swiper-slide">
      <img
        src="/screenStock.png"
        alt="Sistema de punto de venta"
        class="rounded-lg w-full object-fill h-full"
      />
    </div>
    <div class="swiper-slide">
      <img
        src="/screenCaja.png"
        alt="Sistema de punto de venta"
        class="rounded-lg w-full object-fill h-full"
      />
    </div>
  </div>
</div>
<style>
  .swiper {
    width: 100%;
    height: 60vh;
  }

  .swiper-slide {
    display: flex;
    align-items: center;
    padding: 0.5rem;
    justify-content: center;
    border-radius: 18px;
  }
</style>

<!-- Initialize Swiper -->
<script>
  import Swiper from 'swiper/bundle';
  import 'swiper/css/bundle';

  document.addEventListener('DOMContentLoaded', () => {
    new Swiper('.mySwiper', {
      effect: 'coverflow',
      grabCursor: true,
      centeredSlides: true,
      slidesPerView: 'auto',
      coverflowEffect: {
        rotate: 50,
        stretch: 0,
        depth: 100,
        modifier: 1,
        slideShadows: true,
      },
      pagination: {
        el: '.swiper-pagination',
      },
    });
  });
</script>
