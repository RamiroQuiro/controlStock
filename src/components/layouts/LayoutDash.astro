interface Props {
  title: string;
  dataCliente: string;
  userData: { nombre: string; apellido: string; userName: string };
}

const { title, dataCliente, userData } = Astro.props;

const url = Astro.url;
---

<!doctype html>
<html lang="es" theme="white">
  <head>
    <meta charset="UTF-8" />
