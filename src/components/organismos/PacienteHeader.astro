        <div class="flex items-center gap-2">
          <Briefcase size={16} />
          <span>Obra Social: {obraSocial} | N°:{nObraSocial}</span>
        </div>
        {
          maritalStatus && (
            <div class="flex items-center gap-2">
              <Heart size={16} />
              <span>{maritalStatus}</span>
            </div>
          )
        }
        <div class="flex items-center gap-2">
          <Heart size={16} />
          <span>Estatura: {estatura}</span>
        </div>
