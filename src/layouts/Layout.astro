---
import Loader from '../utils/loader/Loader.astro';

interface Props {
  title?: string;
  description?: string;
  keywords?: string[];
  image?: string;
  canonicalURL?: string;
}

const {
  title = 'proStockApp - Gestion치 tu stock como un profesional',
  description = 'proStockApp: Soluci칩n integral para gesti칩n de inventario y punto de venta. Optimiza tu negocio con control de stock, ventas y reportes en tiempo real.',
  keywords = [
    'gesti칩n de inventario',
    'punto de venta',
    'software para negocios',
    'control de stock',
    'sistema de ventas',
  ],
  image = '/og-image.png',
  canonicalURL = 'https://prostockapp.com',
} = Astro.props;

const currentURL = Astro.url.href;
---

<!doctype html>
<html lang="es" theme="white">
  <head>
    <!-- Basic Meta Tags -->
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />

    <!-- Primary Meta Tags -->
    <title>{title}</title>
    <meta name="title" content={title} />
    <meta name="description" content={description} />
    <meta name="keywords" content={keywords.join(', ')} />

    <!-- Open Graph / Facebook -->
    <meta property="og:type" content="website" />
    <meta property="og:url" content={currentURL} />
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:image" content={image} />

    <!-- Twitter -->
    <meta property="twitter:card" content="summary_large_image" />
    <meta property="twitter:url" content={currentURL} />
    <meta property="twitter:title" content={title} />
    <meta property="twitter:description" content={description} />
    <meta property="twitter:image" content={image} />

    <!-- Canonical URL -->
    <link rel="canonical" href={canonicalURL} />

    <!-- Favicon and App Icons -->
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <link rel="apple-touch-icon" href="/apple-touch-icon.png" />

    <!-- Robots and Crawling -->
    <meta name="robots" content="index, follow" />
    <meta name="googlebot" content="index, follow" />

    <!-- Geolocation -->
    <meta name="geo.region" content="AR" />
    <meta name="geo.placename" content="Argentina" />

    <!-- Generator -->
    <meta name="generator" content={Astro.generator} />

    <!-- Verification for Search Engines (replace with your actual verification codes) -->
    <meta
      name="google-site-verification"
      content="your-google-verification-code"
    />
    <meta name="msvalidate.01" content="your-bing-verification-code" />

    <link
      rel="stylesheet"
      href="https://cdn.jsdelivr.net/npm/swiper@11/swiper-bundle.min.css"
    />
  </head>
  <body>
    <Loader />
    <slot />
  </body>
</html>

<style>
  html,
  body {
    margin: 0;
    width: 100%;
    height: 100%;
    scroll-behavior: smooth;
  }
</style>

<script src="https://cdn.jsdelivr.net/npm/swiper@11/swiper-bundle.min.js"
></script>
