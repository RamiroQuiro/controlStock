---
import { Bell, Calendar, History } from "lucide-react";

const actions = [
    {
      icon: History,
      label: 'Ver historial completo',
      color: '#5FA5FA',
    },
    {
      icon: Calendar,
      label: 'Nueva consulta',
      color: '#5FD6FA',
    },
    {
      icon: Bell,
      label: 'Configurar alertas',
      color: '#5FA5FA',
    },
  ];
---
<div class="grid grid-cols-3 gap-4">
    {actions.map(({ icon: Icon, label, color }) => (
      <button
        class="flex items-center gap-3 p-4 bg-white rounded-lg shadow-sm hover:shadow-md transition-shadow"
      >
        <div class="p-2 rounded-full" style={{ backgroundColor: `${color}20` }}>
          <Icon class="w-5 h-5" style={{ color }} />
        </div>
        <span class="text-sm font-medium text-gray-700">{label}</span>
      </button>
    ))}
  </div>