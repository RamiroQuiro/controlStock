---
import DivBox1 from "../../../../components/atomos/DivBox1.astro";
import H2 from "../../../../components/atomos/H2.astro";
import FormularioDeBusqueda from "../../../../components/organismos/FormularioDeBusqueda";
import {ScanBarcode} from 'lucide-react';
const {productosArray}=Astro.props
---

<DivBox1 styleDiv="w-2/3">
    <div class="flex items-center justify-between gap-2">
      <H2>Productos</H2>
    </div>
    <FormularioDeBusqueda
      placeholder={"Codigo de barra, categoria, descripcion, stock, localizaion..."}
    />
    <div
      class="flex flex-col items-start justify-start bg-primary-bg-componentes w-full p-2"
    >
   {productosArray?.map((prod,i)=>(


     <div
     class="bg-white rounded-lg py-1 px-2 flex items-center justify-between w-full"
     >
        <div class="min-w-[75%] flex items-center justify-start gap-2">
          <div class="bg-gray-200 w-1/3">
            <img src={prod?.srcPhoto} alt="logo" class="rounded-lg h-20 object-cover w-full" />
          </div>
          <div>
            <h3
              class="text- font-semibold text-primary-textoTitle capitalize tracking-tight"
              >
        {prod.descripcion}
            </h3>
            <p class="text-sm">{prod.stock} en stock</p>
            <div class="inline-flex items-center gap-2">
                <ScanBarcode  className="w-6 h-5"/>
                <p class="text-sm">{prod.codigoBarra}</p>
                </div>
          </div>
        </div>
        <div class="text-end">
          <h3
            class="text-lg font-semibold text-primary-textoTitle capitalize tracking-tight"
            >
          ${prod?.pVenta}
          </h3>
          <h3
            class="text-lg font-semibold text-primary-textoTitle capitalize tracking-tight"
            >
            $4500000
          </h3>
        </div>
      </div>
            ))
   }
    </div>
  </DivBox1>