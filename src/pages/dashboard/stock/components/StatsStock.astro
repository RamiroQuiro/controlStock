---
import type { LucideIcon } from "lucide-react"


interface PropsDataType{ 
    h2: string,
    bgColor: string,
    icon: LucideIcon;
}

const {h2,bgColor,icon:Icon }=Astro.props as PropsDataType

---

<div class={`bg-gradient-to-br ${bgColor} rounded-lg p-4 0 h-28 w-full text-white flex flex-col overflow-hidden group`}>
    <div class="flex items-center justify-start gap-4">
        <Icon className="w-7 h-7 group-hover:scale-[150%] group-hover:opacity-50 duration-300 group-hover:text-black"/>
        <h2 class="text-2xl font-semibold">{h2}</h2>
    </div>
    
  <p class="group-hover:scale-110 mt-4 origin-left duration-300"><slot/></p>
</div>
