---
import MainDashboard from "../../../../components/atomos/MainDashboard.astro";
import DivBox1 from "../../../../components/atomos/DivBox1.astro";
import H2 from "../../../../components/atomos/H2.astro";
import ListradoProductos from "./ListradoProductos.astro";
import Modal from "../../../../components/moleculas/Modal.astro";
import FormularioCargaProducto from "../../productos/components/FormularioCargaProducto.astro";
import StockActionsMenu from "./StockActionsMenu";
import ContenedorStock from "./ContenedorStock.astro";
import ContenedorTablaTopEgreso from "./ContenedorTablaTopEgreso";
import TablaMovimientosStock from "./TablaMovimientosStock";
import {
  depositos as depositosTable,
  ubicaciones as ubicacionesTable,
} from "../../../../db/schema";
import db from "../../../../db";
import { eq } from "drizzle-orm";
import { tienePermiso } from "../../../../modules/users/utils/permissions";
import { PERMISOS } from "../../../../modules/users/types/permissions";

const { user } = Astro.locals;
if (!user) {
  return Astro.redirect("/login");
}

// Adaptamos el usuario para la verificaci√≥n de permisos
const usuarioConRol = {
  ...user,
  id: String(user?.id),
  rol: user?.rol || "vendedor",
  permisos: (user as any)?.permisos,
};

const puedeCrearProducto = tienePermiso(
  usuarioConRol,
  PERMISOS.PRODUCTOS_CREAR
);
const puedeEditarPrecios = tienePermiso(
  usuarioConRol,
  PERMISOS.PRODUCTOS_EDITAR
);
const puedeComprar = tienePermiso(usuarioConRol, PERMISOS.ORDEN_COMPRA_CREAR);
const puedeTranslado = tienePermiso(usuarioConRol, PERMISOS.TRASLADO_CREAR);
const puedeRecibirTraslado = tienePermiso(
  usuarioConRol,
  PERMISOS.TRASLADO_RECIBIR
);
const puedeVerHistorial = tienePermiso(usuarioConRol, PERMISOS.TRASLADO_VER);

let depositos: any[] = [];
let ubicaciones: any[] = [];
try {
  depositos = await db
    .select({ id: depositosTable.id, nombre: depositosTable.nombre })
    .from(depositosTable)
    .where(eq(depositosTable.empresaId, user.empresaId));
  ubicaciones = await db
    .select({
      id: ubicacionesTable.id,
      nombre: ubicacionesTable.nombre,
      depositoId: ubicacionesTable.depositoId,
    })
    .from(ubicacionesTable)
    .where(eq(ubicacionesTable.empresaId, user.empresaId));
} catch (error) {
  console.log(error);
}

console.log("variable d eusuario locals, en stock.astro", user);
---

<MainDashboard h1="Stock" user={user}>
  <!-- Menu de acciones -->
  <div
    slot={"menu"}
    class="flex items-center justify-end pb-2 md:gap-2 gap-1 pr-6 w-full"
  >
    {
      puedeCrearProducto && (
        <Modal
          label="Crear Producto"
          id="agregarProducto"
          title="Crear Nuevo Producto"
        >
          <FormularioCargaProducto
            depositos={depositos}
            ubicaciones={ubicaciones}
          />
        </Modal>
      )
    }

    <StockActionsMenu
      user={user}
      depositos={depositos}
      ubicaciones={ubicaciones}
      permisos={{
        puedeEditarPrecios,
        puedeComprar,
        puedeRecibirTraslado,
        puedeVerHistorial,
      }}
      client:load
    />
  </div>

  <ContenedorStock />

  <div class="flex md:flex-row flex-col w-full gap-6 items-start justify-start">
    <ListradoProductos />

    <DivBox1 styleDiv="md:w-1/3 w-full space-y-6">
      {/* M√ÅS VENDIDOS - M√ÅS VISIBLE */}
      <div
        class="w-full bg-gradient-to-br from-green-50 to-green-100 rounded-lg p-4 border border-green-200"
      >
        <div class="flex items-center justify-between gap-2 mb-3">
          <H2 class="text-green-800">üèÜ M√°s Vendidos</H2>
          <span
            class="text-xs bg-green-200 text-green-800 px-2 py-1 rounded-full"
          >
            Top 5
          </span>
        </div>
        <ContenedorTablaTopEgreso
          user={user}
          client:load
          label="topMasVendidos"
        />
      </div>

      {/* MENOS VENDIDOS - PARA ATENCI√ìN */}
      <div
        class="w-full bg-gradient-to-br from-orange-50 to-orange-100 rounded-lg p-4 border border-orange-200"
      >
        <div class="flex items-center justify-between gap-2 mb-3">
          <H2 class="text-orange-800">üìâ Huesos (Sin Movimiento)</H2>
          <span
            class="text-xs bg-orange-200 text-orange-800 px-2 py-1 rounded-full"
          >
            +180 d√≠as
          </span>
        </div>
        <ContenedorTablaTopEgreso label="topHuesos" client:load user={user} />
      </div>

      {/* HISTORIAL DE MOVIMIENTOS */}
      <div
        class="w-full bg-gradient-to-br from-blue-50 to-blue-100 rounded-lg p-4 border border-blue-200"
      >
        <div class="flex items-center justify-between gap-2 mb-3">
          <H2 class="text-blue-800">üìä √öltimos Movimientos</H2>
          <span
            class="text-xs bg-blue-200 text-blue-800 px-2 py-1 rounded-full"
          >
            Kardex
          </span>
        </div>
        <TablaMovimientosStock client:visible />
      </div>
    </DivBox1>
  </div>
</MainDashboard>
