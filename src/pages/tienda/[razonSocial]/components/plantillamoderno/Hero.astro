---
import { Search } from "lucide-react";
import Titulo1 from "./Titulo1";

interface Props {
  titulo1: string;
  texto2: string;
  boton1: string;
  boton2: string;
  empresaId: string;
}

const { titulo1, texto2, boton1, boton2, empresaId } = Astro.props;
---

<header
  class="min-h-screen bg-gradient-to-br w-full from-pink-100 via-white to-blue-100 flex items-center justify-center flex-col"
>
  <h1 class="text-4xl lg:text-6xl font-bold">
    <Titulo1 client:load empresaId={empresaId} />
  </h1>

  <div class="flex flex-col sm:flex-row gap-4 justify-center">
    <button
      class="px-8 py-4 bg-gradient-to-r from-pink-500 to-orange-500 text-white rounded-full font-semibold text-lg hover:shadow-lg transform hover:scale-105 transition-all duration-300"
    >
      {boton1}
    </button>
    <button
      class="px-8 py-4 border-2 border-pink-300 text-pink-600 rounded-full font-semibold text-lg hover:bg-pink-50 transition-colors"
    >
      {boton2}
    </button>
  </div>
  <section class="py-8 w-full text-center mx-auto">
    <div class="max-w-2xl mx-auto px-4 sm:px-6">
      <div class="relative">
  
        <input
          type="text"
          placeholder="ðŸ”Ž Buscar..."
          class="w-1/2 pl-14 text-center pr-6 focus:w-full duration-300 placeholder:text-center py-4 bg-white border-2 border-pink-200 rounded-2xl focus:outline-none focus:border-pink-400 text-lg shadow-lg"
        />
      </div>
    </div>
  </section>
</header>
