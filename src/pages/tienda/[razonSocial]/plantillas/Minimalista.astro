---
import CarritoCostadoDetalles from "../components/CarritoCostadoDetalles";
import CarritoFixed from "../components/CarritoFixed";

interface Props {
  data: {
    id: string;
    razonSocial: string;
    nombreFantasia: string;
    documento: string;
    telefono: string;
    theme: string;
    direccion: string;
    email: string;
    srcLogo: string;
    emailEmpresa: string;
    colores?: {
      primary?: string;
      secondary?: string;
    };
    textos?: {
      nombreTienda?: string;
      descripcion?: string;
    };
    productos?: any[];
    categorias?: any[];
  };
}

const { data } = Astro.props as Props;
const primaryColor = data.colores?.primary || "#000000";
const secondaryColor = data.colores?.secondary || "#f5f5f5";
---

<div class="min-h-screen bg-gray-50">
  <CarritoCostadoDetalles client:load />

  <!-- Header Minimalista -->
  <header class="bg-white border-b border-gray-200 sticky top-0 z-40">
    <div class="max-w-6xl mx-auto px-4 py-4 flex items-center justify-between">
      <div class="flex items-center gap-3">
        {
          data.srcLogo && (
            <img
              src={data.srcLogo}
              alt={data.nombreFantasia || data.razonSocial}
              class="h-10 w-10 object-contain rounded"
            />
          )
        }
        <h1 class="text-2xl font-light tracking-tight text-gray-900">
          {data.textos?.nombreTienda || data.nombreFantasia || data.razonSocial}
        </h1>
      </div>

      <CarritoFixed client:load />
    </div>
  </header>

  <!-- Hero Simple -->
  {
    data.textos?.descripcion && (
      <section class="bg-white border-b border-gray-200">
        <div class="max-w-6xl mx-auto px-4 py-12 text-center">
          <p class="text-lg text-gray-600 max-w-2xl mx-auto">
            {data.textos.descripcion}
          </p>
        </div>
      </section>
    )
  }

  <!-- Grid de Productos -->
  <main class="max-w-6xl mx-auto px-4 py-12">
    <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-6">
      {
        data.productos && data.productos.length > 0 ? (
          data.productos.map((producto: any) => (
            <div class="bg-white rounded-lg overflow-hidden border border-gray-200 hover:shadow-lg transition-shadow duration-300">
              {producto.srcImagen && (
                <div class="aspect-square overflow-hidden bg-gray-100">
                  <img
                    src={producto.srcImagen}
                    alt={producto.nombre}
                    class="w-full h-full object-cover hover:scale-105 transition-transform duration-300"
                    loading="lazy"
                  />
                </div>
              )}

              <div class="p-4">
                <h3 class="text-lg font-medium text-gray-900 mb-1">
                  {producto.nombre}
                </h3>

                {producto.descripcion && (
                  <p class="text-sm text-gray-500 mb-3 line-clamp-2">
                    {producto.descripcion}
                  </p>
                )}

                <div class="flex items-center justify-between">
                  <span class="text-2xl font-light text-gray-900">
                    ${producto.precio?.toFixed(2)}
                  </span>

                  <button
                    class="px-4 py-2 bg-gray-900 text-white text-sm font-medium rounded hover:bg-gray-800 transition-colors"
                    style={`background-color: ${primaryColor}`}
                  >
                    Agregar
                  </button>
                </div>

                {producto.stock !== undefined && (
                  <p class="text-xs text-gray-400 mt-2">
                    {producto.stock > 0
                      ? `${producto.stock} disponibles`
                      : "Sin stock"}
                  </p>
                )}
              </div>
            </div>
          ))
        ) : (
          <div class="col-span-full text-center py-12">
            <p class="text-gray-500">
              No hay productos disponibles en este momento.
            </p>
          </div>
        )
      }
    </div>
  </main>

  <!-- Footer Minimalista -->
  <footer class="bg-white border-t border-gray-200 mt-16">
    <div class="max-w-6xl mx-auto px-4 py-8">
      <div
        class="grid grid-cols-1 md:grid-cols-3 gap-8 text-center md:text-left"
      >
        <div>
          <h4 class="font-medium text-gray-900 mb-2">Contacto</h4>
          <div class="space-y-1 text-sm text-gray-600">
            {data.telefono && <p>üìû {data.telefono}</p>}
            {data.emailEmpresa && <p>üìß {data.emailEmpresa}</p>}
            {data.direccion && <p>üìç {data.direccion}</p>}
          </div>
        </div>

        <div>
          <h4 class="font-medium text-gray-900 mb-2">Informaci√≥n</h4>
          <div class="space-y-1 text-sm text-gray-600">
            <p>{data.razonSocial}</p>
            {data.documento && <p>CUIT: {data.documento}</p>}
          </div>
        </div>

        <div>
          <h4 class="font-medium text-gray-900 mb-2">S√≠guenos</h4>
          <div class="flex justify-center md:justify-start gap-3">
            <a
              href="#"
              class="w-8 h-8 bg-gray-100 rounded-full flex items-center justify-center hover:bg-gray-200 transition-colors"
            >
              üìò
            </a>
            <a
              href="#"
              class="w-8 h-8 bg-gray-100 rounded-full flex items-center justify-center hover:bg-gray-200 transition-colors"
            >
              üì∑
            </a>
            <a
              href="#"
              class="w-8 h-8 bg-gray-100 rounded-full flex items-center justify-center hover:bg-gray-200 transition-colors"
            >
              üê¶
            </a>
          </div>
        </div>
      </div>

      <div class="border-t border-gray-200 mt-8 pt-6 text-center">
        <p class="text-sm text-gray-500">
          ¬© {new Date().getFullYear()}
          {data.nombreFantasia || data.razonSocial}. Todos los derechos
          reservados.
        </p>
      </div>
    </div>
  </footer>
</div>

<style>
  .line-clamp-2 {
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }
</style>
