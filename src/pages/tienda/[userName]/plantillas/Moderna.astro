---
import NavBarModerno from '../components/plantillamoderno/NavBarModerno.astro';
import Hero from '../components/plantillamoderno/Hero.astro';
import { Search } from 'lucide-react';
import SeccionProductos from '../components/plantillamoderno/SectionProductos.astro';
import BannerTiendaHome from '../components/plantillamoderno/BannerTiendaHome.astro';
import CarritoFixed from '../components/CarritoFixed';
import CarritoCostadoDetalles from '../components/CarritoCostadoDetalles';
interface Props {
  data: {
    id: string;
    razonSocial: string;
    nombreFantasia: string;
    documento: string;
    telefono: string;
    theme: string;
    layout: string;
    nameStyles: string;
    direccion: string;
    email: string;
    userId: string;
    creadoPor: string;
    created_at: string;
    activo: number;
    emailVerificado: boolean;
    srcPhoto: string;
    srcLogo: string;
    urlWeb: string;
    emailEmpresa: string;
  };
}

const { data } = Astro.props as Props;
