<div
  class="loader-container fixed print:hidden top-0 left-0 w-full h-full items-center justify-center z-30 bg-gray-900/50 backdrop-blur-sm"
>
  <div class="loader"></div>
</div>

<style>
  .loader-container {
    display: none;
  }

  .loader {
    width: 50px;
    height: 50px;
    margin: auto;
    position: relative;
    border: 3px solid #5FA5FA;
    animation: fill 2s linear infinite;
  }

  .loader:after {
    content: '';
    position: absolute;
    bottom: 0;
    left: 0;
    width: 100%;
    height: 0%;
    background: #5FA5FA;
    animation: filling 2s linear infinite;
  }

  @keyframes filling {
    0% {
      height: 0%;
    }
    50% {
      height: 100%;
    }
    100% {
      height: 0%;
    }
  }

  @keyframes fill {
    0% {
      transform: rotate(0deg);
    }
    25% {
      transform: rotate(180deg);
    }
    50% {
      transform: rotate(180deg);
    }
    75% {
      transform: rotate(360deg);
    }
    100% {
      transform: rotate(360deg);
    }
  }
</style>